<Window x:Class="HeatEquationSolverUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HeatEquationSolverUI"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="HeatEquationSolver"
        Width="647"
        Height="507"
        mc:Ignorable="d">
    <Window.Resources>
        <local:AppSettings x:Key="Settings" />
    </Window.Resources>
    <Grid DataContext="{StaticResource Settings}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="Параметры">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Orientation" Value="Horizontal" />
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="Width" Value="70" />
                    </Style>
                </Grid.Resources>
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Label Content="a" />
                    <TextBox Text="{Binding X2}" />
                    <Label Content="N" />
                    <TextBox Text="{Binding N, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="{Binding H}" />
                </StackPanel>
                <StackPanel Grid.Row="0"
                            Grid.RowSpan="4"
                            Grid.Column="1"
                            Orientation="Vertical">
                    <Image Source="Images/equation.PNG" Stretch="None" />
                    <Image Source="Images/concrete_functions.PNG" Stretch="None" />
                    <Image Source="Images/conditions.PNG" Stretch="None" />
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0">
                    <Label Content="T" />
                    <TextBox Text="{Binding T2}" />
                    <Label Content="M" />
                    <TextBox Text="{Binding M, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="{Binding Tau}" />
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="0">
                    <Label Content="Eps" />
                    <TextBox Text="{Binding Epsilon}" />
                    <Label Content="Eps2" />
                    <TextBox Text="{Binding Epsilon2}" />
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="0">
                    <Label Content="Beta0" />
                    <TextBox Text="{Binding Beta0}" />
                    <Label Content="Alpha" />
                    <TextBox Text="{Binding Alpha}" />
                </StackPanel>
                <StackPanel Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Center" />
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="SolveButton"
                    Width="400"
                    Margin="10,0"
                    Click="SolveButton_Click"
                    Content="Решить" />
            <Button Name="StopButton"
                    Margin="10,0"
                    Click="StopButton_OnClick"
                    Content="Stop"
                    IsEnabled="False" />
        </StackPanel>
        <GroupBox Grid.Row="2" Header="Ответ">
            <StackPanel>
                <TextBox Name="AnswerTextBlock"
                         Height="229"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="Норма невязки:" />
                    <Label Name="Norm" />
                </StackPanel>
                <ProgressBar Name="ProgressBar"
                             Width="500"
                             Height="10"
                             Maximum="{Binding M}"
                             ToolTip="{Binding ElementName=ProgressBar,
                                               Path=Value}" />
            </StackPanel>
        </GroupBox>
        <!--<Label Content="Developer: Andrey Arekhva"/>-->
    </Grid>
</Window>
